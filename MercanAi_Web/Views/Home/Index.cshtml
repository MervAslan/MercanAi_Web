@model MercanAi_Web.Models.DashboardViewModel
@{
   
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/mercan.css"/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<div class="container-fluid py-4">
    <div class="main-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="bi bi-water"></i> Mercan Sağlık Analizi
            </h1>
            <p class="page-subtitle">
                <i class="bi bi-cpu"></i> Yapay Zeka Destekli Tespit Sistemi
            </p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-modern">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
            </div>
        }

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="modern-card mb-4">
                    <div class="card-header-modern">
                        <i class="bi bi-gear-fill"></i> Analiz Ayarları
                    </div>
                    <div class="card-body p-4">
                        <form action="/Home/Analyze" method="post" enctype="multipart/form-data">
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="bi bi-cpu"></i> Model Seçimi
                                </label>
                                <select name="selectedModel" class="form-select">
                                    <option value="EfficientNetB0">EfficientNetB0</option>
                                    <option value="ResNet50">ResNet50</option>
                                    <option value="MobileNetV2">MobileNetV2</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="bi bi-image"></i> Mercan Fotoğrafı
                                </label>
                                <input type="file" name="file" class="form-control" accept="image/*" required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-analyze w-100">
                                <i class="bi bi-search"></i> Analiz Başlat
                            </button>
                        </form>
                    </div>
                </div>

                <div class="modern-card">
                    <div class="card-header-modern">
                        <i class="bi bi-trophy-fill"></i> Model Performansları
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush metrics-list">
                            @foreach (var m in Model.Metrics)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-cpu"></i> @m.ModelName</span>
                                    <span class="badge accuracy-badge">
                                        @(Math.Round(m.TestAccuracy * 100, 1))%
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                @if (!string.IsNullOrEmpty(Model.ResultLabel))
                {
                    <div class="result-card">
                        <img src="data:image/png;base64,@Model.UploadedImageBase64"
                             class="img-fluid result-image"
                             alt="Analiz edilen mercan">

                        <h2 class="result-label @(Model.ResultLabel.Contains("BEYAZLAMIŞ") ? "text-danger" : "text-success")">
                            @if (Model.ResultLabel.Contains("BEYAZLAMIŞ"))
                            {
                                <i class="bi bi-exclamation-circle-fill"></i>
                            }
                            else
                            {
                                <i class="bi bi-check-circle-fill"></i>
                            }
                            @Model.ResultLabel
                        </h2>

                        <div class="progress progress-modern">
                            <div class="progress-bar progress-bar-modern @(Model.ResultLabel.Contains("BEYAZLAMIŞ") ? "bg-danger" : "bg-success")"
                                 style="width: @(Model.ResultConfidence)%">
                                <i class="bi bi-speedometer2"></i> Güven: %@Model.ResultConfidence.ToString("0.0")
                            </div>
                        </div>

                        <p class="mt-3 text-muted">
                            <i class="bi bi-cpu-fill"></i> <strong>Kullanılan Model:</strong> @Model.UsedModel
                        </p>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-cloud-upload"></i>
                        <h4 class="text-muted mt-3">Analiz Başlatmak İçin Resim Yükleyin</h4>
                        <p class="text-muted">Sol panelden bir model seçip mercan fotoğrafı yükleyin</p>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="chart-container">
                            <div class="chart-title">
                                <i class="bi bi-graph-up"></i> Model Doğruluk Oranları
                            </div>
                            <canvas id="accChart"></canvas>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="chart-container">
                            <div class="chart-title">
                                <i class="bi bi-graph-down"></i> Model Kayıp Değerleri
                            </div>
                            <canvas id="lossChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script>
    var data = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Metrics));
    var names = data.map(x => x.ModelName);
    var accs = data.map(x => x.TestAccuracy);
    var losses = data.map(x => x.TestLoss);

    
    new Chart(document.getElementById('accChart'), {
        type: 'bar',
        data: {
            labels: names,
            datasets: [{
                label: 'Doğruluk Oranı',
                data: accs,
                backgroundColor: 'rgba(102, 126, 234, 0.8)',
                borderColor: 'rgba(102, 126, 234, 1)',
                borderWidth: 2,
                borderRadius: 8
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    display: true,
                    labels: {
                        font: {
                            family: 'Inter',
                            size: 12,
                            weight: '600'
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    max: 1,
                    ticks: {
                        font: {
                            family: 'Inter'
                        }
                    },
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    }
                },
                x: {
                    ticks: {
                        font: {
                            family: 'Inter'
                        }
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });

   
    new Chart(document.getElementById('lossChart'), {
        type: 'line',
        data: {
            labels: names,
            datasets: [{
                label: 'Kayıp Değeri',
                data: losses,
                borderColor: 'rgba(231, 74, 59, 1)',
                backgroundColor: 'rgba(231, 74, 59, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.4,
                pointBackgroundColor: 'rgba(231, 74, 59, 1)',
                pointBorderColor: '#fff',
                pointBorderWidth: 2,
                pointRadius: 5,
                pointHoverRadius: 7
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    display: true,
                    labels: {
                        font: {
                            family: 'Inter',
                            size: 12,
                            weight: '600'
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        font: {
                            family: 'Inter'
                        }
                    },
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    }
                },
                x: {
                    ticks: {
                        font: {
                            family: 'Inter'
                        }
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>