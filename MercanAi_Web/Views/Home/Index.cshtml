@using System.Globalization
@model MercanAi_Web.Models.DashboardViewModel
@{
   
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/mercan.css"/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<div class="container-fluid py-4">
    <div class="main-container">
        <div class="page-header">
            <h1 class="page-title">
                <i class="bi bi-water"></i> Mercan Sağlık Analizi
            </h1>
            <p class="page-subtitle">
                <i class="bi bi-cpu"></i> Yapay Zeka Destekli Tespit Sistemi
            </p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-modern">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
            </div>
        }

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="modern-card mb-4">
                    <div class="card-header-modern">
                        <i class="bi bi-gear-fill"></i> Analiz Ayarları
                    </div>
                    <div class="card-body p-4">
                        <form action="/Home/Analyze" method="post" enctype="multipart/form-data">
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="bi bi-cpu"></i> Model Seçimi
                                </label>
                                <select name="selectedModel" class="form-select">
                                    <option value="EfficientNetB0">EfficientNetB0</option>
                                    <option value="ResNet50">ResNet50</option>
                                    <option value="MobileNetV2">MobileNetV2</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="bi bi-image"></i> Mercan Fotoğrafı
                                </label>
                                <input type="file" name="file" class="form-control" accept="image/*" required>
                            </div>

                            <button type="submit" class="btn btn-primary btn-analyze w-100">
                                <i class="bi bi-search"></i> Analiz Başlat
                            </button>
                        </form>
                    </div>
                </div>

                <div class="modern-card">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush metrics-list">
                            @foreach (var m in Model.Metrics)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-cpu"></i> @m.ModelName</span>
                                    <span class="badge accuracy-badge">
                                        @(Math.Round(m.TestAccuracy * 100, 1))%
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                @if (!string.IsNullOrEmpty(Model.ResultLabel))
                {
                    <div class="result-card">
                        <img src="data:image/png;base64,@Model.UploadedImageBase64"
                             class="img-fluid result-image"
                             alt="Analiz edilen mercan">

                        <h2 class="result-label @(Model.ResultLabel.Contains("BEYAZLAMIŞ") ? "text-danger" : "text-success")">
                            @if (Model.ResultLabel.Contains("BEYAZLAMIŞ"))
                            {
                                <i class="bi bi-exclamation-circle-fill"></i>
                            }
                            else
                            {
                                <i class="bi bi-check-circle-fill"></i>
                            }
                            @Model.ResultLabel
                        </h2>

                        <div class="confidence-wrapper mt-3">
                            <div class="confidence-label mb-1">
                                <i class="bi bi-shield-check"></i>
                                Güven Oranı: %@Model.ResultConfidence.ToString("0.0")
                            </div>

                            <div class="progress confidence-progress">
                                <div class="progress-bar confidence-bar
                                     @(Model.ResultLabel.Contains("BEYAZLAMIŞ") ? "bg-danger" : "bg-success")"
                                     role="progressbar"
                                     style="width:@Model.ResultConfidence.ToString(CultureInfo.InvariantCulture)%"
                                     aria-valuenow="@Model.ResultConfidence"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    %@Model.ResultConfidence.ToString("0.0")
                                </div>
                            </div>
                        </div>


                        <p class="mt-3 text-muted">
                            <i class="bi bi-cpu-fill"></i> <strong>Kullanılan Model:</strong> @Model.UsedModel
                        </p>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-cloud-upload"></i>
                        <h4 class="text-muted mt-3">Analiz Başlatmak İçin Resim Yükleyin</h4>
                        <p class="text-muted">Sol panelden bir model seçip mercan fotoğrafı yükleyin</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ResultLabel))
                {
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="modern-card h-100">
                                <div class="card-header-modern">
                                    <i class="bi bi-lightbulb-fill"></i> Model Karar Açıklaması
                                </div>
                                <div class="card-body">
                                    <p>
                                        <strong>Sonuç:</strong>
                                        @Model.ResultLabel
                                    </p>

                                    <p>
                                        <strong>Güven Oranı:</strong>
                                        %@Model.ResultConfidence.ToString("0.0")
                                    </p>

                                    <p class="text-muted">
                                        @if (Model.ResultLabel.Contains("BEYAZLAMIŞ"))
                                        {
                                            <span>
                                                Model, mercan dokusunda renk kaybı ve düşük pigment yoğunluğu
                                                tespit ettiği için bu sonucu üretmiştir.
                                            </span>
                                        }
                                        else
                                        {
                                            <span>
                                                Model, mercan dokusunda sağlıklı renk dağılımı ve yüksek
                                                pigment yoğunluğu tespit etmiştir.
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="modern-card h-100">
                                <div class="card-header-modern">
                                    <i class="bi bi-cpu-fill"></i> Model Teknik Bilgileri
                                </div>
                                <div class="card-body">
                                    <ul class="list-unstyled mb-0">
                                        <li><strong>Model:</strong> @Model.UsedModel</li>
                                        <li><strong>Giriş Boyutu:</strong> 224 × 224</li>
                                        <li><strong>Parametre Sayısı:</strong> ~5M</li>
                                        <li><strong>Inference Süresi:</strong> ~120 ms</li>
                                        <li><strong>Çalışma Tipi:</strong> Image Classification</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>




